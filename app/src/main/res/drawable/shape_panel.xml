<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <stroke
                android:width="@dimen/border"
                android:color="@color/monroDarken" />

            <gradient
                android:centerY="0.0"
                android:endColor="@color/monroTransp"
                android:gradientRadius="@integer/gradient_radius"
                android:startColor="@color/monroTransp"
                android:type="radial"></gradient>
        </shape>
    </item>
    <item>
        <inset
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="@dimen/negborder"
            android:insetBottom="@dimen/negborder">
            <shape>
                <stroke
                    android:width="@dimen/border"
                    android:color="@color/monroLight" />

                <solid android:color="@android:color/transparent" />
            </shape>
        </inset>
    </item>

</layer-list>